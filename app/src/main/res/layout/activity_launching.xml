<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.notebuddy.LaunchingActivity"
    android:id="@+id/relativeLayout"
    >


    <TextView
        android:background="#512DA8"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="35dp"
        android:text="Choose your
        year"
        android:textColor="#ffffff"
        android:textSize="35dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:id="@+id/btn1"
        android:textColor="#ffffff"
        android:background="@drawable/rect"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="1st year"
        android:padding="20dp"/>
    <Button
        android:id="@+id/btn2"
        android:textColor="#ffffff"
        android:background="@drawable/rect1"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="2nd year"
        android:padding="20dp"/>
    <Button
        android:id="@+id/btn3"
        android:textColor="#ffffff"
        android:background="@drawable/rect2"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="3rd year"
        android:padding="20dp"/>
    <Button
        android:id="@+id/btn4"
        android:textColor="#ffffff"
        android:background="@drawable/rect3"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="4th year"
        android:padding="20dp"/>
    </LinearLayout>


</RelativeLayout>
